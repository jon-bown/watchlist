<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <edu.utap.watchlist.components.SegmentedControl
        android:id="@+id/movies_tv_control"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_gravity="top"

        >
        <edu.utap.watchlist.components.SegmentedControlButton android:id="@+id/opt_1"
            android:text="Movies"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:checked="true"
            android:textAlignment="center"
            />
        <edu.utap.watchlist.components.SegmentedControlButton android:id="@+id/opt_2" android:text="TV" android:layout_height="match_parent" android:layout_width="wrap_content"
            android:checked="false"
            android:textAlignment="center"/>
    </edu.utap.watchlist.components.SegmentedControl>


    <edu.utap.watchlist.components.SegmentedControl
        android:id="@+id/group_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        >
        <edu.utap.watchlist.components.SegmentedControlButton
            android:id="@+id/trending"
            android:text="Movies"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:checked="true"
            android:textAlignment="center"/>
        <edu.utap.watchlist.components.SegmentedControlButton
            android:id="@+id/hot" android:text="TV"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:checked="false"
            android:textAlignment="center"/>
    </edu.utap.watchlist.components.SegmentedControl>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>