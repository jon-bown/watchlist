<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Testing a very long title so that it makes the constraint view"
            android:id="@+id/watchListName"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/poster"
            app:layout_constraintRight_toLeftOf="@id/seenClick"
            android:ellipsize="none"
            android:maxLines="100"
            android:scrollHorizontally="false"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="1"
            android:textAlignment="viewStart"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_check_box_outline_blank_24"
            android:id="@+id/seenClick"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>